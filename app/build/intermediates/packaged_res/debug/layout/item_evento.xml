<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Fecha del Evento (destacada) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_time"
                android:contentDescription="Fecha"
                app:tint="@color/primary" />

            <TextView
                android:id="@+id/tv_fecha_evento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/primary"
                android:layout_marginStart="8dp"
                android:text="29/10/2025 - 18:00" />

        </LinearLayout>

        <!-- Descripci贸n del Evento -->
        <TextView
            android:id="@+id/tv_descripcion_evento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:maxLines="3"
            android:ellipsize="end"
            android:layout_marginBottom="8dp"
            android:text="Concierto de m煤sica andina en la Plaza de los Ponchos" />

        <!-- Ubicaci贸n -->
        <LinearLayout
            android:id="@+id/layout_ubicacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_location"
                android:contentDescription="Ubicaci贸n"
                app:tint="#757575" />

            <TextView
                android:id="@+id/tv_ubicacion_evento"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="14sp"
                android:textColor="#757575"
                android:layout_marginStart="8dp"
                android:maxLines="2"
                android:ellipsize="end"
                android:text="Plaza de los Ponchos, Otavalo" />

        </LinearLayout>

        <!-- Separador -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:background="#E0E0E0" />

        <!-- Informaci贸n del Creador -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_person"
                android:contentDescription="Creador"
                app:tint="#757575" />

            <TextView
                android:id="@+id/tv_creador_evento"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="12sp"
                android:textColor="#757575"
                android:layout_marginStart="8dp"
                android:text="Creado por Usuario de Prueba" />

            <!-- Badge de estado (pr贸ximamente) -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Pr贸ximo"
                android:textSize="11sp"
                android:textStyle="bold"
                android:textColor="@color/primary"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:background="@drawable/bg_categoria" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
