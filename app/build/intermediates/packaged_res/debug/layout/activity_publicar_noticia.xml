<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Publicar Noticia"
            android:textSize="24sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_titulo"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Título de la noticia"
            android:layout_marginTop="16dp"
            android:padding="12dp" />

        <EditText
            android:id="@+id/et_descripcion"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="Descripción breve"
            android:layout_marginTop="12dp"
            android:padding="12dp"
            android:inputType="textMultiLine" />

        <EditText
            android:id="@+id/et_contenido"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:hint="Contenido completo"
            android:layout_marginTop="12dp"
            android:padding="12dp"
            android:inputType="textMultiLine" />

        <Spinner
            android:id="@+id/spinner_categoria"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="12dp"
            android:padding="12dp" />

        <Button
            android:id="@+id/btn_obtener_ubicacion"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Obtener Ubicación Actual"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/secondary" />

        <TextView
            android:id="@+id/tv_ubicacion_actual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ubicación: No obtenida"
            android:layout_marginTop="8dp"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btn_publicar"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Publicar"
            android:layout_marginTop="24dp"
            android:backgroundTint="@color/primary" />

    </LinearLayout>

</ScrollView>