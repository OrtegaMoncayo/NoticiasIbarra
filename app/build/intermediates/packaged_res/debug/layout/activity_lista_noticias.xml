<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_noticias"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp"
        android:clipToPadding="false" />

    <!-- Menú de navegación personalizado -->
    <LinearLayout
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:background="@color/white"
        android:elevation="8dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <!-- Botón Noticias -->
        <LinearLayout
            android:id="@+id/btn_noticias"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground">

            <ImageView
                android:id="@+id/icon_noticias"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_list"
                android:contentDescription="Noticias"
                app:tint="@color/primary" />

            <TextView
                android:id="@+id/label_noticias"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Noticias"
                android:textSize="11sp"
                android:textColor="@color/primary"
                android:textStyle="bold"
                android:layout_marginTop="2dp" />
        </LinearLayout>

        <!-- Botón Eventos -->
        <LinearLayout
            android:id="@+id/btn_mapa"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground">

            <ImageView
                android:id="@+id/icon_mapa"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_time"
                android:contentDescription="Eventos"
                app:tint="#757575" />

            <TextView
                android:id="@+id/label_mapa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Eventos"
                android:textSize="11sp"
                android:textColor="#757575"
                android:layout_marginTop="2dp" />
        </LinearLayout>

        <!-- Botón Publicar -->
        <LinearLayout
            android:id="@+id/btn_publicar"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground">

            <ImageView
                android:id="@+id/icon_publicar"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_add"
                android:contentDescription="Publicar"
                app:tint="#757575" />

            <TextView
                android:id="@+id/label_publicar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Publicar"
                android:textSize="11sp"
                android:textColor="#757575"
                android:layout_marginTop="2dp" />
        </LinearLayout>

        <!-- Botón Perfil -->
        <LinearLayout
            android:id="@+id/btn_perfil"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground">

            <ImageView
                android:id="@+id/icon_perfil"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_person"
                android:contentDescription="Perfil"
                app:tint="#757575" />

            <TextView
                android:id="@+id/label_perfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Perfil"
                android:textSize="11sp"
                android:textColor="#757575"
                android:layout_marginTop="2dp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
